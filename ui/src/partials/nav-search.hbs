{{#if env.SITE_SEARCH_PROVIDER}}
  <div class="search">
    <button class="search-trigger" type="button" id="search-trigger">
      <svg
        class="search-icon"
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 256 256"
      ><rect width="256" height="256" fill="none" /><circle
          cx="112"
          cy="112"
          r="80"
          fill="none"
          stroke="currentColor"
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="16"
        /><line
          x1="168.57"
          y1="168.57"
          x2="224"
          y2="224"
          fill="none"
          stroke="currentColor"
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="16"
        /></svg>
      <span class="search-trigger-text">Search</span>
      <kbd class="search-key">/</kbd>
    </button>
  </div>
  <div
    class="search-modal hidden"
    id="search-modal"
    data-current-component="{{page.component.name}}"
    data-current-version="{{page.version}}"
  >
    <div class="search-modal-dialog">
      <div class="search-modal-header" id="search-modal-header">
        <svg
          class="search-icon"
          xmlns="http://www.w3.org/2000/svg"
          viewBox="0 0 256 256"
        ><rect width="256" height="256" fill="none" /><circle
            cx="112"
            cy="112"
            r="80"
            fill="none"
            stroke="currentColor"
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="16"
          /><line
            x1="168.57"
            y1="168.57"
            x2="224"
            y2="224"
            fill="none"
            stroke="currentColor"
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="16"
          /></svg>
        <input
          id="search-input"
          type="text"
          placeholder="Search documentation..."
          disabled
        />
        <button
          class="search-modal-close"
          type="button"
          aria-label="Close search"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="18"
            height="18"
            viewBox="0 0 256 256"
          ><line
              x1="200"
              y1="56"
              x2="56"
              y2="200"
              fill="none"
              stroke="currentColor"
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="20"
            ></line><line
              x1="200"
              y1="200"
              x2="56"
              y2="56"
              fill="none"
              stroke="currentColor"
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="20"
            ></line></svg>
        </button>
      </div>
      <div class="search-modal-meta">
        <span class="search-modal-count" id="search-modal-count"></span>
        <span class="search-modal-keymap" aria-label="Search keyboard shortcuts">
          <span class="search-modal-keymap-item">
            <kbd>↑</kbd>/<kbd>↓</kbd><span class="search-modal-keymap-action">nav</span>
          </span>
          <span class="search-modal-keymap-separator" aria-hidden="true">·</span>
          <span class="search-modal-keymap-item">
            <kbd>Enter</kbd><span class="search-modal-keymap-action">open</span>
          </span>
          <span class="search-modal-keymap-separator" aria-hidden="true">·</span>
          <span class="search-modal-keymap-item">
            <kbd>Ctrl</kbd>/<kbd>Cmd</kbd>+<kbd>Enter</kbd><span class="search-modal-keymap-action">tab</span>
          </span>
          <span class="search-modal-keymap-separator" aria-hidden="true">·</span>
          <span class="search-modal-keymap-item">
            <kbd>Esc</kbd><span class="search-modal-keymap-action">close</span>
          </span>
        </span>
        <span class="search-modal-provider">Private, local search</span>
      </div>
      <div class="search-modal-body" id="search-modal-body">
        <div class="search-modal-placeholder" id="search-modal-placeholder">
          <p
            class="search-modal-placeholder-title"
            id="search-modal-placeholder-title"
          >Start typing to search docs</p>
          <p
            class="search-modal-placeholder-hint"
            id="search-modal-placeholder-hint"
          >Results appear as you type.</p>
        </div>
      </div>
    </div>
  </div>
{{/if}}

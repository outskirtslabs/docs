    {{!-- Add additional meta tags here --}}
    <meta name="antora-ui-version" content="@@antora-ui-version"> {{!-- replaced during ui build --}}
    <meta name="version" content="{{{page.version}}}" data-pagefind-filter="version[content]" data-pagefind-meta="version[content]">
    <meta name="generation" content="{{{page.componentVersion.versionSegment}}}">
    <meta name="versioned-url" content="{{{versioned_url site.url page.componentVersion.versionSegment page.url}}}">
    <meta name="component" content="{{{page.component.name}}}" data-pagefind-filter="component[content]" data-pagefind-meta="component[content]">
    {{#with page.component.title}}
    <meta name="component-title" content="{{{this}}}" data-pagefind-meta="component_title[content]">
    {{/with}}
    {{#with page.componentVersion.displayVersion}}
    <meta name="component-display-version" content="{{{this}}}" data-pagefind-meta="display_version[content]">
    {{/with}}
    <meta name="latest-version" content="{{~#if (and page.latest (eq page.url page.latest.url))}}true{{~else}}false{{~/if}}">
